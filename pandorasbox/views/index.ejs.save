<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %> 
</head>
<body>
<div id="coverdiv"><img id="coverimg" src="<%= coverArt %>" alt="" /></div>
<div id="info">
        <br />
	<p class="artist"><%= artist %></p> 
	<p class="title"><%= title %></p>
	<p class="album"><%= album %></p>
	<p class="station"><%= station %></p>
        <br/><br/><br/><br/><br/><br/>
</div>
<div id="controls">
	<div onclick="(new HttpClient()).get('/?action=pause')">PAUSE</div>
	<div onclick="(new HttpClient()).get('/?action=next')">NEXT</div>
S01E        <div onclick="document.getElementById('stations').style.display = 'block'">CHANGEDACHANNEL</div>
<div class="new_channel">
        <form onsubmit="(new HttpClient()).get('/?action=newstationartist_' + document.getElementById('new_station_name_artist').value); return false;">
                <label for="new_station_name_artist">ARTIST STATION</label>
                <input type="text" id="new_station_name_artist"/>
                <input type="submit" value="ADD"/>
        </form>
</div>
<div class="new_channel">
        <form onsubmit="(new HttpClient()).get('/?action=newstationsong_' + document.getElementById('new_station_name_song').value); return false;">
                <label for="new_station_name_song">SONG STATION</label>
                <input type="text" id="new_station_name_song"/>
                <input type="submit" value="ADD"/>
        </form>
</div>
<% if (station !== "QuickMix" && event !== "stationdelete") { %>
<div class="delete_station" onclick="(new HttpClient()).get('/?action=delete')">DELETE THIS</div>
<% } %>
</div>
<div id="stations">
        <p>Change station</p> 
        <% for(let i=0; i < stations.length; i++) { %>
		<div class="station" onclick="(new HttpClient()).get('/?action=station_<%= i %>');"><%= stations[i] %></div>
        <% } %>
        <div class="linked"onclick="javascript:document.getElementById('stations').style.display = 'none';">Close</div>
</div>
<div id="status">
	<div>EVENT =  <%= event %></div>
        <div>VOLUME = <%= volume %></div>
        <div>PLAYINGSTART = <%= playingStart %></div>
</div>
<script>
    var img = new Image(), x = document.getElementById("coverimg");

    img.onload = function() {
        x.src = img.src;
    };

    img.src = "<%= coverArt %>";

    function ScrollInfo(){

    if(document.getElementById('info').scrollTop<(document.getElementById('info').scrollHeight-document.getElementById('info').offsetHeight)){
        document.getElementById('info').scrollTop=document.getElementById('info').scrollTop+1
      } else {
        document.getElementById('info').scrollTop=0;
      }
    }

    setInterval(ScrollInfo,50)
</script>
<%- watchScript %>
</body></html>
